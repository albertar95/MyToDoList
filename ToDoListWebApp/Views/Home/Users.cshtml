@model IEnumerable<ToDoListWebApp.Models.User>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body">
        <div class="row">
            <div class="alert alert-success alert-dismissible fade show" role="alert" id="successDiv" hidden>
                <p id="successMessage"></p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="errorDiv" hidden>
                <p id="errorMessage"></p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-12">
                <div class="p-9">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">User Information</h1>
                    </div>
                    <form class="user" style="padding:25px;" asp-action="AddUser" enctype="multipart/form-data">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" id="Username" name="Username"
                                       placeholder="Username">
                            </div>
                            <div class="col-sm-6">
                                <input type="password" class="form-control form-control-user" id="Password" name="Password"
                                       placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox small">
                                <input type="checkbox" class="custom-control-input" id="IsAdmin" name="IsAdmin" onclick="$(this).attr('value', this.checked ? 'true' : 'false')">
                                <label class="custom-control-label" for="IsAdmin">
                                    Is Admin
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="file" class="form-control" accept="image/*" name="profile"
                                       id="profile">
                                <input type="text" class="form-control" hidden
                                       id="ProfilePic" name="ProfilePic">
                            </div>
                            <div class="col-sm-6">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block" style="width:50%;margin:0 auto;" id="btnCreateUser">
                            Create User
                        </button>
                        <hr>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead style="text-align:center;">
                        <tr>
                            <th>profile</th>
                            <th>Username</th>
                            <th>Is Admin</th>
                            <th>Create Date</th>
                            <th>Last Login Date</th>
                            <th>Is Disabled</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot style="text-align:center;">
                        <tr>
                            <th>profile</th>
                            <th>Username</th>
                            <th>Is Admin</th>
                            <th>Create Date</th>
                            <th>Last Login Date</th>
                            <th>Is Disabled</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var usr in Model.OrderByDescending(p => p.CreateDate))
                        {
                            <tr style="text-align:center;">
                                @if (usr.ProfilePic != null)
                                {
                                    <td><img src="data:image/jpg;base64,@Convert.ToBase64String(usr.ProfilePic)" width="50" height="50" /></td>
                                }else
                                {
                                    <td><img src="@Url.Content("~/img/userIcon.webp")" width="50" height="50" /></td>
                                }
                                <td>@usr.Username</td>
                                @if (usr.IsAdmin)
                                {
                                    <td><img src="@Url.Content("~/img/checked.png")" width="50" height="50" /></td>
                                }
                                else
                                {
                                    <td><img src="@Url.Content("~/img/unchecked.png")" width="20" height="20" /></td>
                                }
                                <td>@usr.CreateDate</td>
                                <td>@usr.LastLoginDate</td>
                                @if (usr.IsDisabled)
                                {
                                    <td><img src="@Url.Content("~/img/checked.png")" width="50" height="50" /></td>
                                }
                                else
                                {
                                    <td><img src="@Url.Content("~/img/unchecked.png")" width="20" height="20" /></td>
                                }
                                <td>
                                    <a href="#" onclick="DeleteUser('@usr.NidUser','@usr.Username')" class="btn btn-outline-danger">delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Logout Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">are you sure you want to delete this user?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="txtmodalBody"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="#" id="btnMDelete">delete</a>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
    $(function()
    {
        if ('@TempData["UserSuccess"]' != "")
        {
            $("#successDiv").removeAttr('hidden');
                $("#successMessage").text('@TempData["UserSuccess"]');
            window.setTimeout(function()
            {
                    $("#successDiv").attr('hidden','hidden');
            },5000);
        }
            if ('@TempData["UserError"]' != "") {
                $("#errorDiv").removeAttr('hidden');
                $("#errorMessage").text('@TempData["UserError"]');
                window.setTimeout(function () {
                    $("#errorDiv").attr('hidden', 'hidden');
                }, 5000);
            }
            $("#ProfilePicture").change(function()
            {
                var formData = new FormData();
                formData.append("profile",this.files[0]);
                $.ajax(
                    {
                        url:'@Url.Action("UploadProfile","Home")',
                        type:'post',
                        datatype:'json',
                        contentType: false,
                        processData: false,
                        data:formData,
                        success:function(result)
                        {
                            $("#ProfilePic").val(result.Message);
                        },
                        error:function()
                        {
                            alert("error occured while uploading picture!")
                        }
                    });
            });
    });
        function DeleteUser(niduser,username) {
            $("#txtmodalBody").text('Username : ' + username);
            $("#btnMDelete").attr('href','@Url.Action("DeleteUser","Home")'+ '/' + niduser);
            $("#deleteModal").modal();
    }
    </script>
}